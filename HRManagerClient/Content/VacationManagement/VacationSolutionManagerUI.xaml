                                            </Calendar>
                                            <Border Margin="0 30 30 0"
                                                    Visibility="{Binding AllSundaySelectedVisibility}" />
                                            <Border Margin="0 30 54 0"
                                                    Visibility="{Binding AllSaturdaySelectedVisibility}" />
                                            <Button Command="{Binding DataContext.ClearSelectionsCommand, ElementName=root}"
                                                    CommandParameter="11"
                                                    Content="清除"
                                                    Margin="24 12"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"></Button>
                                        </Grid>
                                        <Grid Grid.Row="2"
                                              Grid.Column="3">
                                            <Calendar DisplayDate="{Binding Model.Year, Mode=OneWay,Converter={StaticResource VaccationYearToDateConverter}, ConverterParameter=12}"
                                                      SelectedDatesChanged="Calendar_OnSelectedDatesChanged"
                                                      PreviewMouseUp="CalendarItem_OnPreviewMouseUp"
                                                      Tag="12">
                                            </Calendar>
                                            <Border Margin="0 30 30 0"
                                                    Visibility="{Binding AllSundaySelectedVisibility}" />
                                            <Border Margin="0 30 54 0"
                                                    Visibility="{Binding AllSaturdaySelectedVisibility}" />
                                            <Button Command="{Binding DataContext.ClearSelectionsCommand, ElementName=root}"
                                                    CommandParameter="12"
                                                    Content="清除"
                                                    Margin="24 12"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"></Button>
                                        </Grid>

                                    </Grid>
                                </ScrollViewer>
                            </DockPanel>
                            <Rectangle Width="2" Fill="Teal" DockPanel.Dock="Right" Margin="5 0"></Rectangle>
                            <DockPanel >
                                <cc:DBNavigationBar DockPanel.Dock="Top"
                                                    AddText="添加假期方案"
                                                    RemoveText="删除假期方案"
                                                    AddItemCommand="{Binding AddItemCommand}"
                                                    RemoveItemCommand="{Binding RemoveItemCommand}"/>
                                <DataGrid AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          ItemsSource="{Binding Model}"
                                          SelectedItem="{Binding SelectedItem}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding PlanName, Mode=OneWay}"
                                                            IsReadOnly="True"
                                                            Header="方案名称"
                                                            Width="180"></DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Year}"
                                                            IsReadOnly="True"
                                                            Header="年份"></DataGridTextColumn>
                                        <DataGridCheckBoxColumn ElementStyle="{DynamicResource MetroDataGridCheckBox}"
                                                                EditingElementStyle="{DynamicResource MetroDataGridCheckBox}"
                                                                Header="公用方案"
                                                                IsReadOnly="True"
                                                                Binding="{Binding IsPublicPlan}" />
                                        <DataGridTextColumn Binding="{Binding Remark, Mode=OneWay}"
                                                            Header="备注"
                                                            Width="100"
                                                            IsReadOnly="True" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                            
                            
                        </DockPanel>
                        
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Control.Style>
</Control>
